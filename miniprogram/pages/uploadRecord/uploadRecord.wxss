page{
  display: block;
  min-height: 100%;
  width: 100%;
  position: absolute;
  left: 0;
  top: 0;
  background: linear-gradient(180deg, #E2EEFA 0%, #FAFAFA 80%, #FFFFFF 100%) no-repeat;
	padding-bottom: 116rpx;
}
.recordItem{
  width: 686rpx;
  margin: 20rpx auto;
  height: 244rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  box-shadow: 0px 2px 16px 0px rgba(54,154,255,0.09);
}
.recordItem>view:first-child{
  display: flex;
}
.recordItem image{
  width: 236rpx;
  height: 204rpx;
  border-radius: 16rpx;
  margin: 20rpx 34rpx;
}
.recordItem>view:last-child>view:nth-child(1){
  font-size: 30rpx;
  line-height: 60rpx;
}
.recordItem>view:last-child>view:nth-child(2){
  font-size: 28rpx;
  line-height: 60rpx;
}
.recordItem>view:last-child>view:nth-child(3){
  font-size: 24rpx;
  color: white;
  width: 154rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  background: #369AFF;
  border-radius: 26rpx;
  margin-top: 36rpx;
}
.add{
  width: 686rpx;
  margin: 0 auto;
  height: 244rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  box-shadow: 0px 2px 16px 0px rgba(54,154,255,0.09);
  display: flex;
  align-items: center;
  justify-content: center;
}
.add>view>view:first-child{
  width: 86rpx;
  height: 2rpx;
  background: #EDEDED;
}
.add>view>view:last-child{
  width: 86rpx;
  height: 2rpx;
  background: #EDEDED;
  transform: rotate(90deg);
}
.ellipsis{
  margin-top: 40rpx;
}
.ellipsis>view{
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #D8D8D8;
  margin: 16rpx auto;
}
.raceRecordLength{
  text-align: center;
  color: #8E8E8E;
  font-size: 28rpx;
  margin-top: 60rpx;
}