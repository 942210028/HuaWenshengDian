page{
  background: white;
  padding-bottom: 116rpx;
}
.page{
  width: 686rpx;
  margin: 0 auto;
}
video{
  margin: 20rpx 32rpx;
  width: 686rpx;
  height: 274rpx;
  border-radius: 20rpx 20rpx 0px 0px;
  display: flex;
}
.title{
  font-size: 32rpx;
  color: #333333;
}
.subTitle{
  margin-top: 32rpx;
  font-size: 26rpx;
  color: #999999;
}
.content{
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 24rpx;
}
.userInfo{
  margin-top: 38rpx;
  color: #333333;
  font-size: 26rpx;
}
.userInfo>view{
  display: flex;
  align-items: center;
  flex-wrap: nowrap;
  position: relative;
  margin: 20rpx 0;
}
.userInfo>view input{
  /* background: red; */
  background: #f8f8f9a1;
  border-radius: 12rpx;
  margin-left: 16rpx;
  padding: 0rpx 28rpx;
	height: 56rpx;
	line-height: 48rpx;
}
.input-placeholder{
  color: #999999;
  font-size: 22rpx;
}
.userInfo>view:nth-child(1)>input,.userInfo>view:nth-child(2)>input{
	width: calc(50% - 104rpx);
	margin-right: 20rpx;
}
.userInfo>view:nth-child(1)>view,.userInfo>view:nth-child(2)>view{
	display: flex;
	align-items: center;
}
.userInfo>view:nth-child(1)>view>input,.userInfo>view:nth-child(2)>view>input{
	width: 238rpx;
}
.userInfo>view:nth-child(3) input{
  width: calc(100% - 146rpx);
}
.userInfo>view:nth-child(4) input{
  width: calc(100% - 94rpx);
}
.userInfo>view:nth-child(5) input{
  width: calc(100% - 146rpx);
}
.userInfo>view:nth-child(6) input{
  width: calc(100% - 146rpx);
}
.userInfo>view:nth-child(7) input{
  width: calc(100% - 250rpx);
}
.userInfo>view:nth-child(8) input{
  width: calc(100% - 276rpx);
}
.userInfo>view:first-child>text{
  display: inline-block;
  margin-right: 32rpx;
  font-size: 32rpx;
  color: #000000;
}
.introduction textarea{
  width: 686rpx;
  height: 234rpx;
  background: #F5F5F4;
  border-radius: 18rpx;
  margin-top: 32rpx;
  margin-bottom: 54rpx;
  position: relative;
	padding: 12rpx 32rpx;
	border: 2rpx solid #999999;
}
.introduction textarea view{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  color: #979797;
  font-size: 32rpx;
  text-align: center;
}
.upload{
  width: 686rpx;
  height: 234rpx;
  background: #F5F5F4;
  border-radius: 18rpx;
  padding-top: 60rpx;
  /* margin-top: 32rpx; */
}
.upload>view>view:first-child{
  width: 86rpx;
  height: 86rpx;
  margin: 0 auto;
}
.upload>view>view:first-child>view:first-child{
  width: 86rpx;
  height: 2rpx;
  background: #979797;
  transform: translateY(42rpx);
}
.upload>view>view:first-child>view:last-child{
  width: 86rpx;
  height: 2rpx;
  background: #979797;
  transform: rotate(90deg) translateX(42rpx);
}
.upload>view>view:last-child{
  color: #979797;
  font-size: 22rpx;
  line-height: 22rpx;
  text-align: center;
  margin-top: 22rpx;
}
.commit{
  width: 686rpx;
  height: 120rpx;
	background: #b81d1d;
	border-radius: 12rpx;
  line-height: 120rpx;
  text-align: center;
  font-size: 32rpx;
  color: white;
  margin-top: 90rpx;
}
.uploadTips{
  font-size: 22rpx;
  color: gray;
  margin-top: 20rpx;
}
.mask{
  width: 100%;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
  background: rgba(0, 0, 0, 0.4);
}
.picker{
  width: 750rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 101;
}
.van-ellipsis{
	font-size: 26rpx;
	white-space: normal !important;
	line-height: 44rpx;
	display: flex;
	width: 100%;
	align-items: center;
	justify-content: center;
}