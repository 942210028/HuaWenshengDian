page{
  background: #F8F8F8;
}
.form{
  background: white;
  padding: 30rpx 32rpx 90rpx;
}
.form>view{
  display: flex;
  width: 686rpx;
  margin-top: 30rpx;
}
.form>view>view:first-child{
  width: 196rpx;
  height: 88rpx;
  line-height: 88rpx;
}
.save{
  width: 476rpx;
  height: 112rpx;
  text-align: center;
  line-height: 112rpx;
  background: #369AFF;
  border-radius: 58px;
  font-size: 36rpx;
  line-height: 112rpx;
  color: white;
  margin: 108rpx auto 0;
}
input{
  width: 490rpx;
  height: 88rpx;
  background: #F2F2F2;
  border-radius: 20rpx;
  padding: 0 40rpx;
}
textarea{
  width: 490rpx;
  height: 204rpx;
  background: #F2F2F2;
  border-radius: 20rpx;
  padding: 24rpx 40rpx;
}
.mask{
  width: 100%;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
  background: rgba(0, 0, 0, 0.4);
}
.modifyCityShow{
  width: 750rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 101;
}