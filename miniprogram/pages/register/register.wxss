page{
	width: 100vw;
	overflow: hidden;
  background: white;
	padding-bottom: 300rpx;
}
.pageTopBg{
	width: 1000rpx;
	height: 184rpx;
	border-radius: 0 0 50% 50%;
	background: #b81d1d;
	position: relative;
}
.pageTopBg>image{
	width: 0;
	height: 190rpx;
	position: absolute;
	left: 280rpx;
	bottom: -40rpx;
}
.form{
	margin-top: 30rpx;
}
.van-cell__value{
	color: #969799 !important;
}
.selectList{
	width: 100%;
	height: 50rpx;
	font-size: 26rpx;
	line-height: 50rpx;
	text-align: center;
}
.mask{
  width: 100%;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
  background: rgba(0, 0, 0, 0.4);
}
.modifyCityShow,.modifyGradeShow,.modifySchoolShow{
  width: 750rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 101;
}
.commit{
	width: 476rpx;
	height: 112rpx;
	color: white;
	background: #b81d1d;
	border-radius: 58rpx;
	text-align: center;
	line-height: 112rpx;
	font-size: 36rpx;
	position: fixed;
	left: 50%;
	bottom: 40rpx;
	transform: translateX(-50%);
	z-index: 9;
}
.van-field__label--disabled{
  color: #646566 !important;
}
.van-field__control--disabled{
  color: #323233 !important;
}