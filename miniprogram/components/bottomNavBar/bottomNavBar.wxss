.tabbar {
  width: 100%;
  height: 116rpx;
  display: flex;
  justify-content: center;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 99;
  background: white;
	box-shadow: 0px 1px 6px 1px rgba(0,47,118,0.08);
}
.tabbar-item {
  text-align: center;
  padding: 10rpx 0;
}
.tabbar-item-text{
  color: #707070;
}

.tabbar-item-icon {
  width: 76rpx;
  height: 64rpx;
	position: relative;
	margin: 0 auto 8rpx;
	border-radius: 34rpx;
}
.tabbar-item-icon_active{
	background: #fff2f2;
	display: flex;
	align-items: center;
	justify-content: center;
}
.tabbar-item-icon_active image{
  width: 50rpx !important;
	height: 50rpx !important;
}
.tabbar-item:nth-child(2) .tabbar-item-icon_active image{
  width: 56rpx !important;
	height: 46rpx !important;
}
.tabbar-item-icon image {
  width: 64rpx;
  height: 64rpx;
}
.user-tabbar-item-icon image {
  width: 40rpx;
  height: 40rpx;
}

.tabbar-item-text {
  font-size: 26rpx;
  line-height: 26rpx;
}
.user-tabbar-item-text{
  font-size: 22rpx;
  line-height: 22rpx;
}
.active {
  color: #b81d1d;
}
.user-active{
  color: #b81d1d;
}