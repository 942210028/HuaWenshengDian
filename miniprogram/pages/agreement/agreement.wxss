.page{
  display: block;
  min-height: 100%;
  width: 100%;
  position: absolute;
  left: 0;
  top: 0;
	background: white;
	padding-bottom: 116rpx;
}
.content{
	width: 686rpx;
	background: #FFFFFF;
	border-radius: 18px;
	margin: 0 auto;
	padding: 48rpx 32rpx 96rpx;
}
.content>view:nth-child(1){
	text-align: center;
	font-size: 36rpx;
}
.content>view:nth-child(2){
	font-size: 26rpx;
	color: #666666;
}
.content>view:nth-child(3){
	font-size: 24rpx;
	color: #333333;
	margin-top: 88rpx;
}
.nextStep{
  width: 476rpx;
  height: 112rpx;
  background: #b81d1d;
  border-radius: 58rpx;
  text-align: center;
  line-height: 112rpx;
  margin: 60rpx auto;
  color: white;
}