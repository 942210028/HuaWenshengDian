page{
	padding-bottom: 116rpx;
}
.pageBg{
  width: 100%;
  height: 100vh;
  position: fixed;
  top: 0;
  background: url(https://636c-cloud1-4gojwhjp38f8a41c-1315829236.tcb.qcloud.la/icon/pageBg.png) no-repeat, linear-gradient(180deg, #F5EFFF 0%, #FFFFFF 100%);
  background-size: 100%;
  z-index: -1;
}
.title{
  height: 40rpx;
  font-size: 40rpx;
  text-align: center;
  font-weight: 500;
  color: #000000;
}
.userName{
  width: 686rpx;
  padding: 20rpx 40rpx 10rpx;
  height: 80rpx;
  background: #370092;
  border-radius: 52rpx 52rpx 0 0;
  color: white;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-weight: bold;
  margin: 60rpx auto 0;
}
.userName>view:first-child{
  font-size: 46rpx;
  line-height: 46rpx;
}
.userName>view:first-child text{
	font-size: 40rpx;
	font-weight: 400;
	color: #FFFFFF;
}
.userName>view:last-child>view{
  letter-spacing: 2rpx;
	font-size: 30rpx;
	line-height: 40rpx;
  color: #CFCFCF;
  font-weight: 400;
  text-align: right;
}
video{
  width: 100%;
  height: 420rpx;
  background: #FFFFFF;
  box-shadow: 0px 3px 6px 1px rgba(0,47,118,0.08);
}
.author,.instructor,.school,.phoneEmail,.phoneEmail>view{
  display: flex;
  align-items: center;
  font-size: 24rpx;
  margin-top: 20rpx;
}
.phoneEmail{
  justify-content: space-between;
  margin-top: 0;
}
.phoneEmail text:last-child{
  display: inline-block;
  width: 76rpx;
  height: 38rpx;
  background: #F3F3F3;
  border-radius: 20rpx;
  text-align: center;
  line-height: 38rpx;
  color: #999999;
  font-size: 22rpx;
  margin-left: 10rpx;
}
.emailText{
	max-width: 240rpx;
	display: inline-block;
	white-space: nowrap;
	text-overflow: ellipsis;
	overflow: hidden;
}
.school{
	margin-top: 20rpx;
	margin-bottom: 44rpx;
}
.instructor image,.phoneEmail image,.school image{
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}
.worksDetail{
  width: 686rpx;
  margin: 0 auto;
}
.introduce{
  font-size: 26rpx;
  color: #606060;
  margin-top: 10rpx;
}
.introduce text{
  font-size: 32rpx;
}
.scoreArea{
  margin: 52rpx auto;
  padding: 30rpx;
  width: 686rpx;
  /* height: 868rpx; */
  background: #FFFFFF;
  box-shadow: 0px 3px 6px 1px rgba(0,47,118,0.08);
  border-radius: 30rpx;
  position: relative;
}
.scoreArea>view:first-child{
  font-weight: bold;
  color: #3A454B;
	font-size: 18px;
	line-height: 80rpx;
	height: 80rpx;
}
.playScore>view{
  width: 626rpx;
  text-align: center;
  border-bottom: 2rpx solid #EEF3F9;
  padding: 40rpx 0;
  font-size: 26rpx;
	display: flex;
	align-items: center;
	justify-content: space-evenly;
}
.playScore>view>view{
	width: 100%;
}
.van-stepper__minus,.van-stepper__plus{
  background-color: #C6C6C6 !important;
  border-radius: 12rpx !important;
  color: white !important;
}
.van-stepper__input {
  background: none !important;
  border-bottom: 2rpx solid #E1E1E1 !important;
  margin: 0 28rpx !important;
  font-size: 40rpx !important;
  line-height: 40rpx !important;
  font-weight: bold;
}
.confirmScore{
  width: 626rpx;
  height: 106rpx;
  background: #FFFFFF;
  box-shadow: 0px 3px 6px 1px rgba(0,47,118,0.08);
  border-radius: 24rpx;
  border: 2rpx solid #370092;
  text-align: center;
  line-height: 106rpx;
  font-size: 36rpx;
  color: #370092;
  font-weight: bold;
}
.totalScore{
  width: 194rpx;
  height: 194rpx;
  border-radius: 50%;
  border: 2rpx solid #6264AC;
  position: absolute;
  top: -56rpx;
  right: -30rpx;
  padding: 8rpx;
}
.totalScore::after{
  position: absolute;
  content: '';
  width: 208rpx;
  height: 208rpx;
  border-radius: 50%;
  border: 4rpx solid #FF4433;
  border-top: 4rpx solid transparent;
  border-left: 4rpx solid transparent;
  border-right: 4rpx solid transparent;
  top: -10rpx;
  left: -12rpx;
}
.totalScore>view{
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: #6264AC;
  color: white;
  text-align: center;
}
.totalScore>view>view{
  padding: 30rpx 0;
}
.totalScore>view>view>view:first-child{
  font-size: 64rpx;
  font-weight: bolder;
  line-height: 64rpx;
}
.totalScore>view>view>view:last-child{
  font-size: 30rpx;
  line-height: 60rpx;
}
.totalScoreText{
	font-size: 30rpx;
	color: #FF4600;
	margin: 70rpx 0 30rpx;
	text-align: right;
}
.subTitle{
	font-size: 26rpx;
	line-height: 26rpx;
	margin-bottom: 10rpx;
	color: #989FA2;
	line-height: 40rpx;
}
.userInfo{
  width: 686rpx;
  margin: 0 auto;
  margin-top: 38rpx;
  color: #333333;
  font-size: 26rpx;
}
.userInfo>view{
  display: flex;
  align-items: center;
  flex-wrap: nowrap;
  position: relative;
  margin: 20rpx 0;
}
.userInfo>view input{
  border-radius: 12rpx;
  margin-left: 16rpx;
  padding: 0rpx 28rpx;
	height: 56rpx;
	line-height: 48rpx;
}
.input-placeholder{
  color: #999999;
  font-size: 22rpx;
}
.userInfo>view:nth-child(1)>input,.userInfo>view:nth-child(2)>input{
	width: calc(50% - 104rpx);
	margin-right: 20rpx;
}
.userInfo>view:nth-child(1)>view,.userInfo>view:nth-child(2)>view{
	display: flex;
	align-items: center;
}
.userInfo>view:nth-child(1)>view>input,.userInfo>view:nth-child(2)>view>input{
	width: 238rpx;
}
.userInfo>view:nth-child(3) input{
  width: calc(100% - 146rpx);
}
.userInfo>view:nth-child(4) input{
  width: calc(100% - 94rpx);
}
.userInfo>view:nth-child(5) input{
  width: calc(100% - 146rpx);
}
.userInfo>view:nth-child(6) input{
  width: calc(100% - 146rpx);
}
.userInfo>view:nth-child(7) input{
  width: calc(100% - 250rpx);
}
.userInfo>view:nth-child(8) input{
  width: calc(100% - 276rpx);
}
.userInfo>view:first-child>text{
  display: inline-block;
  margin-right: 32rpx;
  font-size: 32rpx;
  color: #000000;
}