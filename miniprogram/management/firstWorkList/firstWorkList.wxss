page {
	padding-bottom: 116rpx;
}

.weui-loadmore {
  width: 100%;
  height: 50rpx;
  font-size: 30rpx;
  text-align: center;
}

.weui-loading {
  width: 50rpx;
  height: 50rpx;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}

.weui-loadmore-tips {
  display: inline-block;
  vertical-align: middle;
}
.pageBg {
	width: 100%;
	height: 100vh;
	position: fixed;
	top: 0;
	background: url(https://636c-cloud1-4gojwhjp38f8a41c-1315829236.tcb.qcloud.la/icon/pageBg.png) no-repeat, linear-gradient(180deg, #F5EFFF 0%, #FFFFFF 100%);
	background-size: 100%;
	z-index: -1;
}

.typeMenu {
	width: 100%;
	height: 116rpx;
	position: fixed;
	z-index: 9;
	background: url(https://636c-cloud1-4gojwhjp38f8a41c-1315829236.tcb.qcloud.la/icon/pageBg.png) no-repeat, #F5EFFF;
	background-size: 100%;
	display: flex;
	align-items: flex-start;
	padding: 26rpx 0;
	box-shadow: 0px 3px 6px 1px rgba(0, 47, 118, 0.08);
}

.typeMenu>view {
	width: 25%;
	text-align: center;
	color: #999999;
	font-size: 32rpx;
	line-height: 32rpx;
}

.typeMenuSelect {
	color: #3A454B !important;
	position: relative;
}

.typeMenuSelect::after {
	position: absolute;
	content: '';
	width: 40rpx;
	height: 8rpx;
	background: #370092;
	border-radius: 4rpx;
	left: 50%;
	bottom: -24rpx;
	transform: translateX(-50%);
}


.workList {
	padding: 0 32rpx;
}

.workVideoCover {
	width: 340rpx;
	height: 180rpx;
	position: relative;
	margin-right: 30rpx;
}
.workVideoCover>view:last-child {
	position: absolute;
	font-size: 26rpx;
	line-height: 44rpx;
	height: 44rpx;
	text-align: center;
	bottom: -44rpx;
	z-index: 2;
	width: 100%;
	color: #370092;
}

.workVideoCover>image {
	position: absolute;
	z-index: 1;
	width: 100%;
	height: 100%;
	border-radius: 8rpx;
	background: gray;
}

.workVideoCover>video {
	position: absolute;
	z-index: 1;
	width: 100%;
	height: 100%;
	border-radius: 8rpx;
}

.workItem {
	width: 686rpx;
	height: 260rpx;
	background: #FFFFFF;
	box-shadow: 0px 3px 6px 1px rgba(0, 47, 118, 0.08);
	border-radius: 30rpx;
	margin: 40rpx 0;
	padding: 30rpx;
}

.workItem>view:first-child {
	display: flex;
	align-items: center;
}
.uploadInfo>view:nth-child(1){
	display: flex;
	align-items: flex-end;
}

.uploadInfo>view:nth-child(1) text:first-child {
	font-size: 36rpx;
	line-height: 36rpx;
	color: #3A454B;
	font-weight: bold;
	display: inline-block;
	max-width: 260rpx;
	white-space: nowrap;
	text-overflow: ellipsis;
	overflow: hidden;
}
.uploadInfo>view:nth-child(1) text:last-child {
	display: inline-block;
	font-size: 26rpx;
	line-height: 26rpx;
	color: #337CFB;
}

.uploadInfo>view:nth-child(2) {
	font-size: 30rpx;
	line-height: 30rpx;
	margin: 26rpx 0;
	color: #3A454B;
}

.uploadInfo>view:nth-child(3) {
	font-size: 24rpx;
	color: #5D6D75;
}