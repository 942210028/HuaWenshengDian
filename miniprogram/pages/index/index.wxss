.adminPage{
  display: block;
  min-height: 100%;
  width: 100%;
  position: absolute;
  left: 0;
  top: 0;
	background: linear-gradient(180deg, #F5EFFF 0%, #FFFFFF 100%) no-repeat;
  padding-bottom: 116rpx;
}
.weui-loadmore {
  width: 100%;
  height: 50rpx;
  font-size: 30rpx;
  text-align: center;
}

.weui-loading {
  width: 50rpx;
  height: 50rpx;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}

.weui-loadmore-tips {
  display: inline-block;
  vertical-align: middle;
}
.pageTop{
	width: 750rpx;
	height: 200rpx;
	overflow: hidden;
}
.pageTop>view{
	width: 2250rpx;
	height: 1300rpx;
	border-radius: 0 0 50% 50%;
	position: relative;
	left: -750rpx;
	top: -1100rpx;
	background: #b81d1d;
	padding: 1100rpx 810rpx 50rpx;
	display: flex;
	justify-content: space-between;
	color: white;
	font-size: 24rpx;
}
.pageTop>view>view{
	display: flex;
	align-items: center;
}
.pageTop>view>view:nth-child(2){
	color: #DCE8FF;
}
.userAvatar{
	display: flex;
	margin-right: 28rpx;
}
.userAvatar>image{
	width: 72rpx;
	height: 72rpx;
	border-radius: 50%;
}
.userName>view:nth-child(1){
	font-size: 30rpx;
	display: flex;
	align-items: center;
}
.userName text{
	display: inline-block;
	width: 56rpx;
	height: 28rpx;
	border-radius: 18rpx;
	background-color: white;
	color: #b81d1d;
	font-size: 16rpx;
	text-align: center;
	line-height: 28rpx;
	margin-left: 16rpx;
}
.swiper-box {
  width: 686rpx;
  height: 318rpx;
  margin: 10rpx auto 0;
}

.bannerImg {
  width: 686rpx;
  height: 250rpx;
  background: #ffffff;
  border-radius: 32rpx;
  display: flex;
  overflow: hidden;
}

.bannerImg image {
  width: 100%;
  height: 100%;
}
.examine{
	width: 686rpx;
	height: 352rpx;
	background: #F7F2FF;
	box-shadow: 0px 3px 6px 1px rgba(0,47,118,0.08);
	border-radius: 32rpx;
	margin: 26rpx auto;
	padding: 30rpx;
}
.examineTitle{
	display: flex;
	align-items: center;
	justify-content: space-between;
	color: #b81d1d;
	font-weight: bold;
	font-size: 30rpx;
	line-height: 30rpx;
}
.joinUser{
	display: flex;
	align-items: center;
	justify-content: space-between;
	font-size: 20rpx;
	color: #999999;
	margin-top: 38rpx;
}
.joinUser>view{
	display: flex;
	align-items: center;
}
.joinUser>view>image{
	width: 66rpx;
	height: 66rpx;
	border-radius: 50%;
	margin-right: 10rpx;
}
.joinUser>view:nth-child(1)>view{
	display: inline-block;
	width: 66rpx;
	height: 66rpx;
	line-height: 60rpx;
	text-align: center;
	background: #EDF7FF;
	border-radius: 32rpx;
	box-shadow: 0px 3px 6px 1px rgba(118, 0, 0, 0.08);
	font-weight: bolder;
	font-size: 48rpx;
	color: #505050;
}
.examineSubTitle{
	font-size: 40rpx;
	line-height: 40rpx;
	font-weight: bold;
	color: #3A454B;
	margin-top: 40rpx;
}
.examineDetail{
	display: flex;
	align-items: center;
	justify-content: space-between;
	font-size: 24rpx;
	margin-top: 12rpx;
}
.examineDetail>view:nth-child(2){
	width: 172rpx;
	height: 66rpx;
	color: white;
	background: #b81d1d;
	box-shadow: 0px 3px 6px 1px rgba(0,47,118,0.08);
	border-radius: 54rpx;
	line-height: 66rpx;
	text-align: center;
	font-size: 26rpx;
}
.joinList_box{
	width: 686rpx;
	margin: 40rpx auto 0;
}
.joinUserTitle{
	display: flex;
	align-items: center;
	justify-content: space-between;
}
.joinUserTitle>view:first-child{
	font-size: 36rpx;
	line-height: 36rpx;
	font-weight: bold;
	color: #3A454B;
}
.joinUserTitle>view:last-child{
	color: #b81d1d;
	font-size: 26rpx;
}
.joinUserAvatar{
	display: flex;
	margin-right: 26rpx;
}
.joinUserAvatar>image{
	width: 72rpx;
	height: 72rpx;
	border-radius: 50%;
}
.joinList>view{
	display: flex;
	align-items: center;
	justify-content: space-between;
	padding: 30rpx 0;
	border-bottom: 1px solid #FFFFFF;
}
.joinList>view>view:last-child{
	color: #b81d1d;
}
.joinList>view>view:nth-child(1){
	display: flex;
	align-items: center;
}
.joinUserInfo>view:first-child{
	font-size: 30rpx;
}
.joinUserInfo>view:last-child{
	font-size: 24rpx;
}



/* ——————————————————————   用户端    —————————————————————— */
.userPage{
  display: block;
  min-height: 100%;
  width: 100%;
  position: absolute;
  left: 0;
  top: 0;
	background: white;
  padding-bottom: 116rpx;
}
.pageTop_user{
	width: 2650rpx;
	height: 1300rpx;
	border-radius: 0 0 50% 50%;
  position: fixed;
  z-index: 1;
	left: -950rpx;
  top: -1100rpx;
  overflow: hidden;
}
.pageTop_user>view{
	width: 750rpx;
  background: #b81d1d;
  position: absolute;
  left: 950rpx;
  bottom: 0;
}
.user_swiper-box{
  width: 686rpx;
  height: 276rpx;
  display: flex;
  margin: 0 auto;
  background: #ffffff;
  z-index: 2;
  position: relative;
  border-radius: 20rpx;
}
.user_bannerImg {
  width: 686rpx;
  height: 276rpx;
  background: #ffffff;
  border-radius: 20rpx;
  display: flex;
  overflow: hidden;
}

.user_bannerImg image {
  width: 100%;
  height: 100%;
}
.user_menu{
  width: 686rpx;
  margin: 56rpx auto;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.user_menu>view{
  text-align: center;
  color: #333333;
  font-size: 24rpx;
}
.user_menu>view>view:first-child{
  width: 100rpx;
  height: 100rpx;
  border-radius: 8rpx;
  background: #ffffff;
  margin: 0 auto 20rpx;
}
.user_menu>view>view:first-child image{
  width: 100rpx;
  height: 100rpx;
}
.user_raceArea{
  width: 686rpx;
  margin: 10rpx auto;
}
.user_raceArea-title{
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #333333;
  font-size: 24rpx;
  margin-bottom: 40rpx;
}
.user_raceArea-title>view:first-child{
  font-size: 32rpx;
  position: relative;
}
.user_raceArea-title>view:first-child::after{
  position: absolute;
  content: '';
  width: 54rpx;
  height: 8rpx;
  border: 6rpx solid #b81d1d;
  border-radius: 0 0 50% 50%/0 0 100% 100% ;
  border-top: none;
  left: 50%;
  transform: translateX(-50%);
  bottom: -10rpx;
}
.user_raceItem{
  width: 686rpx;
  background-color: white;
  box-shadow: 0px 2px 5px 10px rgba(224,226,228,0.18);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  padding: 10rpx;
  font-size: 22rpx;
  line-height: 38rpx;
  color: #666666;
}
.user_raceItem>view:first-child{
  display: flex;
}
.user_raceItem>view:first-child>image{
  width: 310rpx;
  height: 220rpx;
  margin-right: 32rpx;
  background: white;
  border-radius: 16rpx;
}
.user_raceItem>view:nth-child(2)>view:nth-child(1){
  font-size: 30rpx;
  line-height: 42rpx;
  color: #333333;
}
.user_raceItem>view:nth-child(2)>view:nth-child(4){
  font-size: 24rpx;
  color: #ffffff;
  width: 154rpx;
  height: 48rpx;
  text-align: center;
  line-height: 48rpx;
  background: #369AFF;
  border-radius: 26rpx;
  margin-top: 10rpx;
}
.indexMenu{
  width: 686rpx;
  height: 300rpx;
  background: #FFFFFF;
  box-shadow: 0px 2px 5px 10px rgba(224,226,228,0.5);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  margin: 20rpx 0;
  font-size: 30rpx;
  color: #333333;
}
.indexMenu image{
  width: 312rpx;
	height: 222rpx;
	border-radius: 12rpx;
}
.indexMenu>view:first-child{
  display: flex;
  margin-right: 32rpx;
}
.indexMenu>view:last-child{
  width: 318rpx;
  letter-spacing: 3rpx;
}
.relative{
  position: relative;
  z-index: 9;
}